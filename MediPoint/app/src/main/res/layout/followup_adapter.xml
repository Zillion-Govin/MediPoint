<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    >
    <!-- Icons -->
    <ImageView
        android:id="@+id/specialty_icon"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:src="@mipmap/icontp_medipoint"
        android:layout_margin="2dp"
        android:layout_alignBottom="@+id/appointment_time" />

    <TextView
        android:text="Wisdom Tooth Extraction"
        android:singleLine="true"
        android:id="@+id/appointment_service"
        android:textSize="18sp"
        android:layout_margin="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/specialty_icon"
        />
    <TextView
        android:text="Monday, 10 Jun 2015"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/appointment_service"
        android:layout_marginLeft="2dp"
        android:layout_toRightOf="@id/specialty_icon"
        android:id="@+id/appointment_date"/>
    <TextView
        android:text="10:30 - 11:30"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/appointment_date"
        android:layout_marginLeft="2dp"
        android:layout_marginBottom="5dp"
        android:layout_toRightOf="@id/specialty_icon"
        android:id="@+id/appointment_time"/>

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginRight="10dp"
        android:id="@+id/radioBtnFollowupAdapter"
        android:layout_alignBottom="@+id/appointment_time"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>

